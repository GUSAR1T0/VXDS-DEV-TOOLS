<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <OutputType>Exe</OutputType>
        <TargetFramework>netcoreapp3.1</TargetFramework>
        <AssemblyName>VXDesign.Store.DevTools.Database</AssemblyName>
        <RootNamespace>VXDesign.Store.DevTools.Database</RootNamespace>
        <LangVersion>8.0</LangVersion>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="FluentMigrator" Version="3.2.1" />
        <PackageReference Include="FluentMigrator.Runner" Version="3.2.1" />
    </ItemGroup>

    <ItemGroup>
        <ProjectReference Include="..\Core\Core.csproj" />
    </ItemGroup>

    <ItemGroup>
        <EmbeddedResource Include="Scripts\Authentication_AddUserRoles.sql" />
        <EmbeddedResource Include="Scripts\Authentication_AddUsers.sql" />
        <EmbeddedResource Include="Scripts\Authentication_CreateAuthenticationSchema.sql" />
        <EmbeddedResource Include="Scripts\Authentication_CreateUserRoleTable.sql" />
        <EmbeddedResource Include="Scripts\Authentication_CreateUserTable.sql" />
        <EmbeddedResource Include="Scripts\Authentication_DropAuthenticationSchema.sql" />
        <EmbeddedResource Include="Scripts\Authentication_DropUserRoleTable.sql" />
        <EmbeddedResource Include="Scripts\Authentication_DropUserTable.sql" />
        <EmbeddedResource Include="Scripts\Base_AddInitialLoadingRecord.sql" />
        <EmbeddedResource Include="Scripts\Base_CreateBaseSchema.sql" />
        <EmbeddedResource Include="Scripts\Base_CreateOperationTable.sql" />
        <EmbeddedResource Include="Scripts\Base_CreateListTableTypes.sql" />
        <EmbeddedResource Include="Scripts\Base_DropBaseSchema.sql" />
        <EmbeddedResource Include="Scripts\Base_DropListTableTypes.sql" />
        <EmbeddedResource Include="Scripts\Base_DropOperationTable.sql" />
    </ItemGroup>

    <ItemGroup>
      <None Include="appsettings.json">
        <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      </None>
    </ItemGroup>

</Project>
